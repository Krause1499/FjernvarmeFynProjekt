<Window x:Class="FjernvarmeFynLogin.View.PreviousTicketsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FjernvarmeFynLogin.View"
        mc:Ignorable="d"
        Title="PreviousTicketsWindow" Icon="../Pics/FjernvarmeFynLogoNoTextPNG.png" Height="1080" Width="1920" ResizeMode="CanMinimize" WindowState="Maximized">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFFFC638" Offset="1"/>
            <GradientStop Color="White" Offset="0.4"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Button x:Name="backBtn" Content="Tilbage" Style="{DynamicResource ButtonStyle}" HorizontalAlignment="Left" Margin="38,44,0,0" VerticalAlignment="Top" FontSize="40" Width="300" Height="100" Click="backBtn_Click"/>
        <Label Content="Tidligere sager" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="85" FontWeight="Bold"/>
        <ListBox ItemsSource="{Binding FeedbackVM}" 
         BorderThickness="0" Background="Transparent"
         HorizontalAlignment="Center" VerticalAlignment="Center"
         Width="1000" Height="700" Grid.Row="1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border CornerRadius="10" Padding="10" Margin="5"
                    Background="#2D2D30">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="35"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="230"/>
                                <ColumnDefinition Width="155"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="230"/>
                            </Grid.ColumnDefinitions>

                            <!-- Priority Indicator -->
                            <Rectangle Width="30" Height="30" RadiusX="8" RadiusY="8"
                               Fill="{Binding PriorityColor}" VerticalAlignment="Center" Grid.Column="0"/>

                            <!-- Feedback Id Text -->
                            <TextBlock Text="ID: " FontSize="22" Foreground="White"
                               VerticalAlignment="Center" Grid.Column="1"/>

                            <!-- Feedback Id -->
                            <TextBlock Text="{Binding FeedbackId}" FontSize="22" Foreground="White"
                               VerticalAlignment="Center" Grid.Column="2"/>

                            <!-- Feedback Type -->
                            <TextBlock Text="{Binding FeedbackType}" FontSize="22" Foreground="White"
                               VerticalAlignment="Center" Grid.Column="3"/>

                            <!-- Internal System Text -->
                            <TextBlock Text="Internt system: " FontSize="22" Foreground="White"
                               VerticalAlignment="Center" Grid.Column="4"/>

                            <!-- System Name -->
                            <TextBlock Text="{Binding InternalSystem}" FontSize="22" Foreground="White"
                               VerticalAlignment="Center" Grid.Column="5"/>

                            <!-- Date -->
                            <TextBlock Text="{Binding FormattedDate, StringFormat='dd/MM/yyyy HH:MM:ss'}" FontSize="22" Foreground="White"
                               VerticalAlignment="Center" Grid.Column="6"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.Resources>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Padding" Value="5"/>
                    <Setter Property="Margin" Value="3"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="10"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border x:Name="Border" CornerRadius="10"
                                Background="Transparent">
                                    <ContentPresenter/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#444"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#007ACC"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.Resources>
        </ListBox>
    </Grid>
</Window>
