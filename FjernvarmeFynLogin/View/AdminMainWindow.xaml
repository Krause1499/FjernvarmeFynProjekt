<Window x:Class="FjernvarmeFynLogin.View.AdminMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FjernvarmeFynLogin.View"
        mc:Ignorable="d"
        Title="Admin" Icon="../Pics/FjernvarmeFynLogoNoTextPNG.png" Height="1080" Width="1920" ResizeMode="CanMinimize" WindowState="Maximized">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFFFC638" Offset="1"/>
            <GradientStop Color="White" Offset="0.4"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="365*"/>
            <RowDefinition Height="699*"/>
        </Grid.RowDefinitions>
        <Button x:Name="logoutBtn" Content="Log ud" Style="{DynamicResource ButtonStyle}" HorizontalAlignment="Left" Margin="38,44,0,0" VerticalAlignment="Top" FontSize="40" Width="300" Height="100"/>
        <Label x:Name="amountOfUnanswered" Content="0" HorizontalAlignment="Left" Margin="342,150,0,0" VerticalAlignment="Top" FontSize="100" FontFamily="Arial Black" Grid.Row="1"/>
        <Label x:Name="amountOfOngoing" Content="0" HorizontalAlignment="Center" Margin="0,150,0,0" VerticalAlignment="Top" FontSize="100" FontFamily="Arial Black" RenderTransformOrigin="0.222,0.48" Grid.Row="1"/>
        <Label x:Name="amountOfClosed" Content="0" HorizontalAlignment="Left" Margin="1501,150,0,0" VerticalAlignment="Top" FontSize="100" FontFamily="Arial Black" RenderTransformOrigin="0.222,0.48" Grid.Row="1"/>
        <Label Content="Admin" HorizontalAlignment="Center" Margin="0,31,0,0" VerticalAlignment="Top" FontSize="80" FontFamily="Elephant"/>
        <Label Content="Ubesvaret" HorizontalAlignment="Left" Margin="250,281,0,0" VerticalAlignment="Top" FontSize="50" FontFamily="Elephant"/>
        <Label Content="On-going" HorizontalAlignment="Center" Margin="0,281,0,0" VerticalAlignment="Top" FontSize="50" FontFamily="Elephant"/>
        <Label Content="Løst" HorizontalAlignment="Left" Margin="1477,281,0,0" VerticalAlignment="Top" FontSize="50" FontFamily="Elephant"/>
        <Image x:Name="unansweredTickets" Margin="-34,161,1121,70" Source="../Pics/Oval.png" Stretch="Fill" Grid.RowSpan="2" MouseDown="unansweredTickets_MouseDown">
            <Image.Style>
                <Style TargetType="{x:Type Image}">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Image.Style>
        </Image>
        <Image x:Name="ongoingTickets" Margin="544,161,544,70" Source="../Pics/Oval.png" Stretch="Fill" Grid.RowSpan="2" MouseDown="ongoingTickets_MouseDown">
            <Image.Style>
                <Style TargetType="{x:Type Image}">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Image.Style>
        </Image>
        <Image x:Name="solvedTickets" Margin="1123,161,-35,70" Source="../Pics/Oval.png" Stretch="Fill" Grid.RowSpan="2" MouseDown="solvedTickets_MouseDown">
            <Image.Style>
                <Style TargetType="{x:Type Image}">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Image.Style>
        </Image>
    </Grid>

</Window>
