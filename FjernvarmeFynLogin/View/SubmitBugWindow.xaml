<Window x:Class="FjernvarmeFynLogin.View.SubmitBugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FjernvarmeFynLogin.View"
        mc:Ignorable="d"
        Title="SubmitBugWindow" Icon="../Pics/FjernvarmeFynLogoNoTextPNG.png" Height="1080" Width="1920" ResizeMode="CanMinimize" WindowState="Maximized">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFFFC638" Offset="1"/>
            <GradientStop Color="White" Offset="0.4"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
            <RowDefinition Height="530"/>

            <RowDefinition/>
        </Grid.RowDefinitions>

        <Image Source="../Pics/FjernvarmeFynLogoNoTextPNG.png" Width="200" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Row="1" Grid.Column="2"/>
        <Label Height="80" Width="324" Content="Fejlmelding" HorizontalAlignment="Center" Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" FontSize="48" FontWeight="Bold" Grid.ColumnSpan="2" Margin="0,87,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <StackPanel Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Height="100" Width="705" >
            <Label Content="Vælg Prioritetsniveau"/>
            <RadioButton GroupName="1" Name="High" Content="Høj"/>
            <RadioButton GroupName="1" Name="Medium" Content="Middel"/>
            <RadioButton GroupName="1" Name="Low" Content="Lav"/>

        </StackPanel>


    </Grid>
</Window>
