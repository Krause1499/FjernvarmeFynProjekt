<Window x:Class="FjernvarmeFynLogin.View.SubmitFeatureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FjernvarmeFynLogin.View"
        mc:Ignorable="d"
        Title="SubmitFeatureWindow" Icon="../Pics/FjernvarmeFynLogoNoTextPNG.png" Height="1080" Width="1920" ResizeMode="CanMinimize" WindowState="Maximized">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFFFC638" Offset="1"/>
            <GradientStop Color="White" Offset="0.4"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
            <RowDefinition Height="530"/>

            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button x:Name="backBtn" Content="Tilbage" Style="{DynamicResource ButtonStyle}" FontSize="40" Width="300" Height="100" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="1" Click="backBtn_Click"/>

        <Image Source="../Pics/FjernvarmeFynLogoNoTextPNG.png" Width="200" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Row="1" Grid.Column="2"/>
        <Label Height="80" Width="324" Content="Feature" HorizontalAlignment="Center" Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" FontSize="48" FontWeight="Bold" Grid.ColumnSpan="2" Margin="0,87,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>



        <StackPanel Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Height="200" Width="705" Margin="0, -190, 0, 0">
            <Label Content="VÆLG PRIORITETSNIVEAU" FontSize="30" FontWeight="Bold"/>

            <!--Knap 1, højeste prio-->
            <RadioButton GroupName="1" Name="High" Content="Høj" FontSize="22" VerticalContentAlignment="Center" Checked="High_Checked">
                <RadioButton.LayoutTransform>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                </RadioButton.LayoutTransform>
            </RadioButton>

            <!--Knap 2, mellemste prio-->
            <RadioButton GroupName="1" Name="Medium" Content="Middel" FontSize="22" VerticalContentAlignment="Center" Checked="Medium_Checked">
                <RadioButton.LayoutTransform>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                </RadioButton.LayoutTransform>
            </RadioButton>

            <!--Knap 3, laveste prio-->
            <RadioButton GroupName="1" Name="Low" Content="Lav" FontSize="22" VerticalContentAlignment="Center" Checked="Low_Checked">
                <RadioButton.LayoutTransform>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                </RadioButton.LayoutTransform>
            </RadioButton>



        </StackPanel>



        <Label Grid.Column="2" Grid.Row="2" VerticalAlignment="Top" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Content="Beskriv venligst fejlen her:" FontSize="25" Margin="0, 30, 0, 0"/>
        <TextBox Grid.Column="2" Grid.Row="2" TextWrapping="Wrap"  HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="850" Height="450" BorderBrush="Black" BorderThickness="3" Text="{Binding DescriptiveTextProp, UpdateSourceTrigger=PropertyChanged}"/>

        <StackPanel Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Height="200" Width="705" Margin="0, 250, 0, 0">
            <Label Content="VÆLG PÅGÆLDENDE SYSTEM" FontSize="30" FontWeight="Bold"/>
            <ComboBox Height="40" Width="280" HorizontalAlignment="Left" ItemsSource="{Binding ExampleSystemNumbers}" SelectedItem="{Binding InternalSystemProp, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <ComboBox.LayoutTransform>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                </ComboBox.LayoutTransform>
            </ComboBox>
        </StackPanel>





        <!--Denne button skal bindes til pop-up bekræftelsen, som skal bindes til AddTicketFeatureCommand-->
        <Button x:Name="confirmBtn" Command="{Binding AddTicketCommand}" CommandParameter="{Binding}" Content="Send Ticket" Style="{DynamicResource ButtonStyle}" FontSize="40" Width="300" Height="100" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="3" Grid.Column="1" Margin="-150"/>


    </Grid>
</Window>
