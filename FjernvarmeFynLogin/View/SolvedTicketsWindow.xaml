<Window x:Class="FjernvarmeFynLogin.View.SolvedTicketsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FjernvarmeFynLogin.View"
        mc:Ignorable="d"
        Title="Løste Tickets" Icon="../Pics/FjernvarmeFynLogoNoTextPNG.png" Height="1080" Width="1920" ResizeMode="CanMinimize" WindowState="Maximized">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFFFC638" Offset="1"/>
            <GradientStop Color="White" Offset="0.4"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Button x:Name="backBtn" Content="Tilbage" Style="{DynamicResource ButtonStyle}" HorizontalAlignment="Left" Margin="38,44,0,0" VerticalAlignment="Top" FontSize="40" Width="300" Height="100" Click="backBtn_Click"/>
        <ListBox ItemsSource="{Binding FeedbackVM}" 
                 BorderThickness="0" Background="Transparent"
                 HorizontalAlignment="Center" VerticalAlignment="Center"
                 Width="1000" Height="700" SelectionChanged="ListBox_SelectionChanged">

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border CornerRadius="10" Padding="10" Margin="5"
                            Background="#2D2D30">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="230"/>
                            </Grid.ColumnDefinitions>

                            <!-- Priority Indicator -->
                            <Rectangle Width="30" Height="30" RadiusX="8" RadiusY="8"
                                       Fill="{Binding PriorityColor}" VerticalAlignment="Center"/>

                            <!-- Feedback ID -->
                            <TextBlock Text="{Binding FeedbackId}" FontSize="22" Foreground="White"
                                       VerticalAlignment="Center" Grid.Column="1"/>

                            <!-- System Name -->
                            <TextBlock Text="{Binding InternalSystem}" FontSize="22" Foreground="White"
                                       VerticalAlignment="Center" Grid.Column="2"/>

                            <!-- Date -->
                            <TextBlock Text="{Binding FormattedDate}" FontSize="22" Foreground="White"
                                       VerticalAlignment="Center" Grid.Column="3"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>

            <ListBox.Resources>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Padding" Value="5"/>
                    <Setter Property="Margin" Value="3"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="10"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border x:Name="Border" CornerRadius="10"
                                        Background="Transparent">
                                    <ContentPresenter/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#444"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#007ACC"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.Resources>

        </ListBox>
    </Grid>
</Window>

